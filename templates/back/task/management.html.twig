{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block body %}
    {{ form_start(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        {{ form_row(form.limitedAt) }}
        {{ form_row(form.note) }}

        {% if action == "modifier" %}
            {{ form_row(form.status) }}
        {% endif %}

        <button type="submit">{{ action }}</button>

    {{ form_end(form) }}
{% endblock %}
